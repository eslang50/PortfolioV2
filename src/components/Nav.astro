---
import { Icon } from "astro-icon/components";
---

<nav class="md:px-24 px-8 pt-12">
  <Icon name="send" size={40} id="logo" class="cursor-pointer" />
  <ul id="side-menu">
    <Icon
      name="close"
      class="md:hidden m-auto"
      onclick="document.getElementById('side-menu').style.right = '-200px';"
      size={40}
    />
    <li>
      <a aria-label="Link to home page of portfolio" href="#header">Home</a>
    </li>
    <li>
      <a aria-label="Link to about section of portfolio" href="#about">About</a>
    </li>
    <li>
      <a aria-label="Link to project section of portfolio" href="#portfolio"
        >Portfolio</a
      >
    </li>
    <li>
      <a aria-label="Link to contact section of portfolio" href="#contact"
        >Contact</a
      >
    </li>
  </ul>
  <Icon
    name="hamburger"
    class="md:hidden top-24 left-24"
    onclick="document.getElementById('side-menu').style.right = '0';"
    size={40}
  />
</nav>

<style>
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
  }

  nav ul li {
    display: inline-block;
    list-style: none;
    margin: 10px 20px;
  }

  nav ul li a {
    color: #fff;
    text-decoration: none;
    font-size: 20px;
    position: relative;
  }

  nav ul li a::after {
    content: "";
    width: 0;
    height: 3px;
    background: #ff004f;
    position: absolute;
    left: 0;
    bottom: -6px;
    transition: 0.5s;
  }

  nav ul li a:hover::after {
    width: 100%;
  }

  @media only screen and (max-width: 768px) {
    nav ul {
      background-color: #ff004f;
      position: fixed;
      top: 0;
      right: -120px;
      width: 120px;
      height: 100vh;
      padding-top: 50px;
      z-index: 2;
      transition: right 0.5s;
    }

    nav ul li {
      display: block;
      margin: 25px;
    }
  }
</style>

<script>
  let sidemenu: HTMLElement | null = document.getElementById("side-menu");

  export function openmenu() {
    sidemenu!.style.right = "0";
  }

  export function closemenu() {
    sidemenu!.style.right = "-200px";
  }

  document.getElementById("logo")!.addEventListener("click", () => {
    location.reload();
  });
</script>
